<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.5" method="upgrade">
	<name>Crisp Livechat</name>
	<author>Crisp IM</author>
	<authorEmail>baptiste@crisp.chat</authorEmail>
	<authorUrl>https://crisp.chat</authorUrl>
	<creationDate></creationDate>
	<version>1.2.0</version>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<url>https://crisp.chat</url>
	<description>Crisp is a free and beautiful livechat to interact with customers.</description>

	<!-- Media files -->
	<media folder="media/com_crisplivechat" destination="com_crisplivechat">
		<folder>css</folder>
		<folder>images</folder>
	</media>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu link='index.php?option=com_crisplivechat'>Crisp</menu>

		<!-- Core files -->
		<files folder="administrator/components/com_crisplivechat">
			<filename>crisplivechat.php</filename>
			<filename>controller.php</filename>
			<filename>LICENSE.txt</filename>
			<folder>controllers</folder>
			<folder>models</folder>
			<folder>views</folder>
		</files>
	</administration>
</extension>
